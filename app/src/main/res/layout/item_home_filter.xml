<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="filter"
            type="com.seom.banchan.ui.model.home.FilterMenuModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/tgb_grid"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textOn="@null"
            android:textOff="@null"
            android:checked="@={filter.toggle}"
            android:background="@drawable/selector_toggle_grid"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/tgb_linear"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:textOn="@null"
            android:textOff="@null"
            android:checked="@={!filter.toggle}"
            android:background="@drawable/selector_toggle_linear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tgb_grid"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:drawable="@drawable/ic_linear_unselected" />
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/greyScaleBlack"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_linear_selected"/>
        </layer-list>
    </item>

</selector>